[
    {
        "use_key_equivalents": true,
        "bindings": {
            "cmd-shift-c": null, // collab_panel::ToggleFocus
            "cmd-,": "zed::OpenSettingsFile",
            "cmd-alt-,": "zed::OpenDefaultSettings"
        }
    },
    {
        "context": "BufferSearchBar || ProjectSearchBar",
        "use_key_equivalents": true,
        "bindings": { "ctrl-enter": "editor::Newline" }
    },
    {
        "context": "Editor",
        "use_key_equivalents": true,
        "bindings": { "cmd-shift-l": "editor::SplitSelectionIntoLines" }
    },
    {
        "context": "Editor && extension == py",
        "use_key_equivalents": true,
        "bindings": { "cmd-r": ["task::Spawn", { "task_name": "run module '$ZED_FILE'" }] }
    },
    { "context": "Picker", "use_key_equivalents": true, "bindings": { "cmd-w": "menu::Cancel" } },
    {
        "context": "ProjectSearchBar",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-shift-f": "pane::DeploySearch" // https://github.com/zed-industries/zed/issues/27291
        }
    },
    { "context": "Terminal", "use_key_equivalents": true, "bindings": { "cmd-r": "terminal::RerunTask" } },
    {
        "context": "Workspace",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-r": null, // workspace::ToggleRightDock
            "cmd-k cmd-s": "zed::OpenKeymapFile",
            "cmd-k cmd-alt-s": "zed::OpenDefaultKeymap",
            "f1": "command_palette::Toggle"
        }
    },
    {
        "context": "Workspace && !Terminal",
        "use_key_equivalents": true,
        "bindings": { "ctrl-r": ["projects::OpenRecent", { "create_new_window": false }] }
    }
]
