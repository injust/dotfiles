[
    {
        "use_key_equivalents": true,
        "bindings": {
            "cmd-shift-c": null, // collab_panel::ToggleFocus
            "cmd-,": "zed::OpenSettingsFile",
            "cmd-alt-,": "zed::OpenDefaultSettings"
        }
    },
    {
        "context": "BufferSearchBar || ProjectSearchBar",
        "use_key_equivalents": true,
        "bindings": { "ctrl-enter": "editor::Newline" }
    },
    {
        "context": "!ContextEditor > Editor && mode == full",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-shift-e": "project_panel::ToggleFocus" // https://github.com/zed-industries/zed/issues/23967
        }
    },
    {
        "context": "Editor",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-\\": null, // pane::SplitRight
            "ctrl-shift-left": null, // editor::SelectSmallerSyntaxNode
            "ctrl-shift-right": null, // editor::SelectLargerSyntaxNode
            "cmd-ctrl-up": "editor::SelectLargerSyntaxNode",
            "cmd-ctrl-down": "editor::SelectSmallerSyntaxNode",
            "cmd-ctrl-left": "editor::SelectPreviousSyntaxNode",
            "cmd-ctrl-right": "editor::SelectNextSyntaxNode",
            "cmd-shift-l": "editor::SplitSelectionIntoLines"
        }
    },
    {
        "context": "Editor && extension == py",
        "use_key_equivalents": true,
        "bindings": { "cmd-r": ["task::Spawn", { "task_name": "run module '$ZED_FILE'" }] }
    },
    {
        "context": "Pane || (!ContextEditor > Editor && mode == full) || Terminal", // https://github.com/zed-industries/zed/issues/48713
        "use_key_equivalents": true,
        "bindings": { "ctrl-enter": "workspace::ToggleZoom" }
    },
    { "context": "Picker", "use_key_equivalents": true, "bindings": { "cmd-w": "menu::Cancel" } },
    {
        "context": "ProjectSearchBar",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-shift-f": "pane::DeploySearch" // https://github.com/zed-industries/zed/issues/27291
        }
    },
    { "context": "Terminal", "use_key_equivalents": true, "bindings": { "cmd-r": "terminal::RerunTask" } },
    {
        "context": "Workspace",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-r": null, // workspace::ToggleRightDock
            "f1": "command_palette::Toggle"
        }
    },
    {
        "context": "Workspace && !Terminal",
        "use_key_equivalents": true,
        "bindings": {
            "cmd-k cmd-s": "zed::OpenKeymapFile",
            "cmd-k cmd-alt-s": "zed::OpenDefaultKeymap",
            "ctrl-r": ["projects::OpenRecent", { "create_new_window": false }]
        }
    }
]
