[advice]
	detachedHead = false
	skippedCherryPicks = false

[alias]
	ad = add
	am = commit --amend --no-edit
	ame = commit --amend
	br = branch
	cl = clone
	clb = cloneb
	cloneb = clone --filter=blob:none
	cm = commit
	co = checkout
	cp = cherry-pick
	df = diff
	dfc = diffc
	dft = difft
	dftc = difft --cached
	dfu = diffu
	dfus = diffu --stat
	diffc = diff --cached
	difft = -c diff.external=difft diff
	diffu = diff @{upstream}
	gr = grep --break --heading
	lg = log
	lgu = log @{upstream}
	lol = log --decorate --oneline --graph
	lola = lol --all
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	sh = show
	showt = -c diff.external=difft show --ext-diff
	sht = showt
	st = status
	sw = switch
	swc = switch --create

	show-ignored = !git clean -d --dry-run -X | sed 's/^Would remove //'

