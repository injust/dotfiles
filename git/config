[advice]
	detachedHead = false
	skippedCherryPicks = false

[alias]
	am = commit --amend --no-edit
	ame = commit --amend
	br = branch
	cl = clone
	clb = cloneb
	cloneb = clone --filter=blob:none
	cm = commit
	co = checkout
	cp = cherry-pick
	df = diff -p --stat
	dfc = diffc
	dfu = diffu
	diffc = diff -p --stat --cached
	diffu = diff -p --stat @{upstream}
	fe = fetch
	gr = grep --break --heading
	lgu = log @{upstream}
	lol = log --decorate --oneline --graph
	lola = lol --all
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	sh = show -p --stat
	st = status
	sw = switch
	swc = switch --create

	show-ignored = !git clean -d --dry-run -X | sed 's/^Would remove //' | eza --classify --icons --hyperlink --treat-dirs-as-files

